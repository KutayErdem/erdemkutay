<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.learnin5">
    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".LoginScienceActivity"
            android:label="Computer Science"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".ScienceActivity"
            android:label="Computer Science"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".LoginEngineeringActivity"
            android:label="Computer Engineering"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".LoginMathActivity"
            android:label="Mathematics"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".SplashActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".FavoritesPlayerActivity" />
        <activity
            android:name=".FavoritesActivity"
            android:label="Favorites"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".LoginYoutubePlayerActivity" />
        <activity
            android:name=".LoginMainActivity"
            android:label="LearnIn5"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".SignActivity"
            android:label="Sign Up"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".EngineeringActivity"
            android:label="Computer Engineering"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".MathActivity"
            android:label="Mathematics"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".YoutubePlayerActivity"
            android:label="LearnIn5"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.learnin5.MainActivity" />
        </activity>
    </application>

</manifest>